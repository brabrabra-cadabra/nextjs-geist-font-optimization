<Window x:Class="LibreLibrarySystem.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Libre Library System" Height="350" Width="500" WindowStartupLocation="CenterOwner" Background="#FFF9F9F9" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="About Libre Library System" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Team Members:" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Margin="10,0,0,0">
                <TextBlock Text="Name: John Doe" Margin="0,0,0,5"/>
                <TextBlock Text="Motto: Knowledge is Power" Margin="0,0,0,5"/>
                <TextBlock Text="Designation: Project Lead" Margin="0,0,0,15"/>
                <TextBlock Text="Name: Jane Smith" Margin="0,0,0,5"/>
                <TextBlock Text="Motto: Learn and Grow" Margin="0,0,0,5"/>
                <TextBlock Text="Designation: Developer" Margin="0,0,0,15"/>
                <TextBlock Text="Name: Alice Johnson" Margin="0,0,0,5"/>
                <TextBlock Text="Motto: Code with Passion" Margin="0,0,0,5"/>
                <TextBlock Text="Designation: Designer" Margin="0,0,0,15"/>
            </StackPanel>
            <Button Content="Close" Width="80" Height="30" HorizontalAlignment="Right" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
